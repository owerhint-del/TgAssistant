# ============================================================
# TgAssistant — configuration template
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# ——— TELEGRAM (required) ————————————————————————————————————
# Get yours at https://my.telegram.org → API development tools
TG_API_ID=
TG_API_HASH=
TG_PHONE=+49123456789
TG_SESSION_PATH=./sessions/tgassistant

# ——— ANTHROPIC (required) ———————————————————————————————————
# Get yours at https://console.anthropic.com/keys
ANTHROPIC_API_KEY=

# ——— MODELS (defaults are fine) —————————————————————————————
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_LANG=ru
LLM_MODEL=claude-sonnet-4-6
LLM_MAX_TOKENS=8192

# ——— PATHS ——————————————————————————————————————————————————
OUTPUT_DIR=~/Documents/TgAssistant_output
TEMP_DIR=./temp
LOG_LEVEL=INFO

# ——— LIMITS ——————————————————————————————————————————————————
MAX_RETRIES=3
RETRY_BACKOFF_SEC=30
CONCURRENCY=1
MAX_DURATION_SEC=7200
MAX_FILE_MB=2000

# ——— PDF ————————————————————————————————————————————————————
PDF_SPLIT_MODE=two_pdfs
PDF_FONT_PATH=./fonts/DejaVuSans.ttf
PDF_PAGE_SIZE=A4
SUMMARY_LANGUAGE=ru

# ——— CLEANUP ————————————————————————————————————————————————
CLEANUP_TEMP=true
